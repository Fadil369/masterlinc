{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "module": "es2022",
        "moduleResolution": "bundler",
        "types": [
            "@cloudflare/workers-types",
            "node"
        ],
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@basma/shared/*": [
                "../../../packages/shared/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}