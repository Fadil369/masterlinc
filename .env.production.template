# MASTERLINC Production Environment Variables
# Copy this file to .env.production and fill in the values

# Database Configuration
POSTGRES_DB=masterlinc
POSTGRES_USER=masterlinc
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_HERE

# Application Secrets
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# OpenAI API (Optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Kong API Gateway
KONG_DB_PASSWORD=CHANGE_ME_KONG_PASSWORD_HERE

# Grafana
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_HERE
GRAFANA_ROOT_URL=https://grafana.yourdomain.com

# Build Information (auto-populated by CI/CD)
BUILD_DATE=2024-01-01
VCS_REF=main

# NPHIES Integration (Saudi Arabia Health Insurance Platform)
NPHIES_BASE_URL=https://nphies.sa
NPHIES_CLIENT_ID=your-client-id
NPHIES_CLIENT_SECRET=your-client-secret
NPHIES_LICENSE_KEY=your-license-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@yourdomain.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=masterlinc-prod-storage

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=info
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,app.yourdomain.com

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_RATE_LIMITING=true
ENABLE_API_DOCS=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30
