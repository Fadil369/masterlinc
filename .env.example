# BrainSAIT MASTERLINC Environment Configuration

# ============================================
# General Configuration
# ============================================
NODE_ENV=development
ENVIRONMENT=development
LOG_LEVEL=info

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Database Configuration
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=masterlinc
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=masterlinc
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# FHIR Database
FHIR_POSTGRES_DB=fhir
FHIR_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${FHIR_POSTGRES_DB}

# Audit Database
AUDIT_POSTGRES_DB=audit
AUDIT_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${AUDIT_POSTGRES_DB}

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================
# AI/LLM Configuration
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic (optional alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LangChain
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=masterlinc

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth 2.0 (Optional)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REDIRECT_URI=

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# ============================================
# FHIR Server Configuration
# ============================================
FHIR_SERVER_URL=http://fhir-server:8080/fhir
FHIR_VERSION=R4
HAPI_FHIR_VERSION=latest
HAPI_FHIR_SUBSCRIPTION_ENABLED=false
HAPI_FHIR_ALLOW_EXTERNAL_REFERENCES=true

# ============================================
# NPHIES Configuration (Saudi Health Insurance)
# ============================================
NPHIES_BASE_URL=https://hsb.nphies.sa
NPHIES_LICENSE_KEY=your-nphies-license-key
NPHIES_PAYER_LICENSE=your-payer-license
NPHIES_PROVIDER_LICENSE=your-provider-license
NPHIES_VERSION=1.0.0
NPHIES_TIMEOUT=30
NPHIES_RETRY_ATTEMPTS=3

# ============================================
# Service Endpoints
# ============================================
MASTERLINC_API_URL=http://masterlinc-api:8000
CLAIMLINC_API_URL=http://claimlinc-api:8001
DOCTORLINC_API_URL=http://doctorlinc-api:8002
POLICYLINC_API_URL=http://policylinc-api:8003
DEVLINC_API_URL=http://devlinc-api:8004
AUTHLINC_API_URL=http://authlinc-api:8005
AUDIT_SERVICE_URL=http://audit-service:8006

# ============================================
# API Gateway Configuration
# ============================================
KONG_DATABASE=postgres
KONG_PG_HOST=postgres
KONG_PG_PORT=5432
KONG_PG_USER=kong
KONG_PG_PASSWORD=changeme_in_production
KONG_PG_DATABASE=kong
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_PROXY_LISTEN=0.0.0.0:8000

# ============================================
# Monitoring Configuration
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_in_production

# ============================================
# Arabic NLP Configuration
# ============================================
ARABIC_NLP_ENABLED=true
CAMEL_TOOLS_DATA_PATH=/app/data/camel_tools

# ============================================
# Audit & Compliance
# ============================================
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=2555
AUDIT_LOG_LEVEL=info
HIPAA_COMPLIANCE_MODE=true

# ============================================
# Performance & Scaling
# ============================================
WORKERS_PER_CORE=1
MAX_WORKERS=4
WORKER_TIMEOUT=300
RATE_LIMIT_PER_MINUTE=100
BATCH_SIZE=50

# ============================================
# Feature Flags
# ============================================
ENABLE_WORKFLOW_ORCHESTRATION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_REAL_TIME_VALIDATION=true
ENABLE_AI_ANALYSIS=true
ENABLE_BILINGUAL_SUPPORT=true
